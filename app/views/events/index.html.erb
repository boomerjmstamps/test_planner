<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Event date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Location</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.event_date.strftime("%a, %B %d") %></td>
    <td><%= event.start_time.strftime("%l:%M%p") %></td>
    <td><%= event.end_time.strftime("%l:%M%p") %></td>
    <td><%= event.location %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

